{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app",
  "version": "2.0.0",
  "identifier": "com.swish-app.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "plugins": { "dialog": null, "fs": null },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
