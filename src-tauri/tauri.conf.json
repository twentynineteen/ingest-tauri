{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bucket",
  "version": "0.12.0",
  "identifier": "com.bucket-app.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bucket",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "dragDropEnabled": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "transparent": true,
        "trafficLightPosition": {
          "x": 20,
          "y": 20
        },
        "acceptFirstMouse": false,
        "tabbingIdentifier": "bucket-app"
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: bucket: 'self' 'unsafe-inline' 'unsafe-eval",
      "capabilities": []
    }
  },
  "plugins": {
    "dialog": null,
    "deep-link": {
      "desktop": {
        "schemes": [
          "bucket",
          "myapp",
          "Bucket"
        ]
      }
    },
    "fs": null,
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEMTg1Njc4NjNDQjk2RUQKUldUdGxzdGplRllZbmZMN1ZWM3FXK2ROZ1luZEt2VktaVWRlajAyZGtpc2Y4TnRNS2s5U0VQL24K",
      "endpoints": [
        "https://github.com/twentynineteen/bucket/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "resources": {
      "assets/*": "resources/",
      "assets/plugins/*": "resources/plugins/",
      "resources/embeddings/*": "embeddings/"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "background": "./images/bucket-installer-bg.png",
        "appPosition": {
          "x": 520,
          "y": 70
        },
        "applicationFolderPosition": {
          "x": 520,
          "y": 260
        },
        "windowSize": {
          "height": 440,
          "width": 660
        }
      },
      "entitlements": "tauri.entitlements.mac.plist",
      "exceptionDomain": "localhost",
      "signingIdentity": null
    }
  }
}
